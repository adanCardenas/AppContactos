<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/S1_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cardenas.adan.appcontactos.MainActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/S1_TextInputLayout_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/S1_TextInputEditText_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/TextoNombre" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/S1_TextInputLayout_FechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/S1_TextInputEditText_FechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TextoFechaNacimiento"
            android:layout_gravity="center_vertical"/>

        <DatePicker
            android:id="@+id/S1_DatePicker_FechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            ></DatePicker>
    </LinearLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/S1_TextInputLayout_Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/S1_TextInputEditText_Telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="@string/TextoTelefono" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/S1_TextInputLayout_CorreoElectronico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/S1_TextInputEditText_CorreoElectronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/TextoElectronico"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/S1_TextInputLayout_Descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/S1_TextInputEditText_Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/TextoDescripcion" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/S1_Button_Siguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TextoBotonSiguiente"
        android:layout_gravity="end"
        />
</LinearLayout>

